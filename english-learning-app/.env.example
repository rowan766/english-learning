# 复制此文件为 .env 并根据需要修改配置

# 应用配置
VITE_APP_TITLE=English Learning App
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=英语学习应用

# API 配置 - 修改为您的后端地址
VITE_API_BASE_URL=http://localhost:8002
VITE_API_TIMEOUT=30000

# 功能开关
VITE_ENABLE_CONSOLE_LOG=true
VITE_ENABLE_PERFORMANCE_MONITOR=true
VITE_ENABLE_PWA_INSTALL_PROMPT=true

# 文件上传配置
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.pdf,.txt,.docx,.doc

# 其他配置
VITE_DEFAULT_LANGUAGE=zh
VITE_DEFAULT_THEME_COLOR=#1677ff